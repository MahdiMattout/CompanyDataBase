@model List<AdminsOfDangerousPc>

@{

}

<div>
    <h3 class="font-weight-bold">Info about Admins of the PCs in Danger</h3>
</div>

<br />
<br />

<table class="table bg-white table-striped table-bordered table-condensed table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                Admin ID
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Admin Email
            </th>
            <th>
                Number of Unhealthy PCs
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountDPcId)
            </td>
        </tr>
        }
    </tbody>
</table>

<a asp-controller="CompanyPCs" asp-action="DisplayPCs" asp-route-CompanyName=@ViewData["CompanyName"]>Back to list</a>