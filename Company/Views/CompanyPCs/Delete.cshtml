@model CompanyPc

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete PC</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            PcID<br/>Admin ID<br/>Employee ID<br/>Name of User<br/>Company Name<br/>
            CPU Model<br/>CPU Manufacturer<br/>Clock Speed<br/>Disk Model<br/>Disk Space<br/>
            Read Write Speed<br/>Memory Model<br/>Total Memory<br/>Average CPU Usage<br/>Average Memory Usage
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PcId)
            <br />
            @Html.DisplayFor(model => model.AdminId)
            <br />
            @Html.DisplayFor(model => model.EmployeeId)
            <br />
            @Html.DisplayFor(model => model.NameOfUser)
            <br />
            @Html.DisplayFor(model => model.NameofCompany)
            <br />
            @Html.DisplayFor(model => model.CpuModel)
            <br />
            @Html.DisplayFor(model => model.Cpumanufacturer)
            <br />
            @Html.DisplayFor(model => model.ClockSpeed)
            <br />
            @Html.DisplayFor(model => model.DiskModel)
            <br />
            @Html.DisplayFor(model => model.DiskSpace)
            <br />
            @Html.DisplayFor(model => model.ReadWriteSpeed)
            <br />
            @Html.DisplayFor(model => model.MemoryModel)
            <br />
            @Html.DisplayFor(model => model.TotalMemory)
            <br />
            @Html.DisplayFor(model => model.AverageCpuUsage)
            <br />
            @Html.DisplayFor(model => model.AverageMemoryUsage)
        </dd>
    </dl>

    <br/>
    <hr/>

    <form asp-controller="CompanyPCs" asp-action="Delete" asp-route-PcId="@Model.PcId" >
        <input type="hidden" asp-for="PcId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-controller="CompanyPCs" asp-action="DisplayPCs" asp-route-CompanyName="@Model.NameofCompany">Back to all PCs</a>
    </form>
</div>
