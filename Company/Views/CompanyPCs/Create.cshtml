@model CompanyPc
@{
    ViewData["Title"] = "Create";
}

<div class="container">

    <h1>Create PC</h1>

    <hr />

    <form asp-controller="CompanyPCs" class="form-horizontal" asp-action="Create" asp-route-CompanyName="@ViewData["CompanyName"]">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="AdminId" class="control-label col-sm-2"></label>
            <div class="col-sm-10">
                <input required type="number" asp-for="AdminId" class="form-control" value="@ViewData["AdminId"]" />
            
                <span asp-validation-for="AdminId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="EmployeeId" class="control-label col-sm-2"></label>
            <div class="col-sm-10">
                <input required type="number" asp-for="EmployeeId" class="form-control" value="@ViewData["EmployeeId"]" />
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CpuModel" class="control-label col-sm-2"></label>
            <div class="col-sm-10">
                <input required type="text" asp-for="CpuModel" class="form-control" >
                <span asp-validation-for="CpuModel" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Cpumanufacturer" class="control-label col-sm-2">CPU Manufacturer</label>
            <div class="col-sm-10">
                <input required type="text" asp-for="Cpumanufacturer" class="form-control" />
                <span asp-validation-for="Cpumanufacturer" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ClockSpeed" class="control-label col-sm-2"></label>
            <div class="col-sm-10">
                <input required type="number" asp-for="ClockSpeed" class="form-control" />
                <span asp-validation-for="ClockSpeed" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DiskModel" class="control-label col-sm-2"></label>
            <div class="col-sm-10">
                <input required type="text" asp-for="DiskModel" class="form-control" />
                <span asp-validation-for="DiskModel" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DiskSpace" class="control-label col-sm-2"></label>
            <div class="col-sm-10">
                <input required type="number" asp-for="DiskSpace" class="form-control" />
                <span asp-validation-for="DiskSpace" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ReadWriteSpeed" class="control-label col-sm-2">Read Write Speed</label>
            <div class="col-sm-10">
                <input required type="number" asp-for="ReadWriteSpeed" class="form-control" />
                <span asp-validation-for="ReadWriteSpeed" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MemoryModel" class="control-label col-sm-2"></label>
            <div class="col-sm-10">
                <input required asp-for="MemoryModel" class="form-control" />
                <span asp-validation-for="MemoryModel" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TotalMemory" class="control-label col-sm-2"></label>
            <div class="col-sm-10">
                <input required type="number" asp-for="TotalMemory" class="form-control" />
                <span asp-validation-for="TotalMemory" class="text-danger"></span>
            </div>
        </div>
        <br />



        <div class="form-group float-right">
            <input type="submit" value="Add PC" class="btn btn-primary" />

        </div>
    </form>
    <a asp-controller="CompanyPCs" asp-action="DisplayPCs" asp-route-CompanyName="@ViewData["CompanyName"]">Back to List</a>
</div>
