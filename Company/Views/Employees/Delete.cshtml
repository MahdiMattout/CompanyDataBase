@model Employee

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Person</h4>
    <hr />
    <dl class="row">
        <dd class="col-sm-10">
            @Html.DisplayNameFor(model => model.EmployeeId)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayNameFor(model => model.LastName)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayNameFor(model => model.OfficeExtension)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayNameFor(model => model.OfficeNumber)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Position)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayNameFor(model => model.Ssn)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CompanyName)
        </dd>
    </dl>

    <form asp-action="Delete" asp-route-EmployeeId="@Model.EmployeeId" asp-route-CompanyName="@ViewData["CompanyName"]">
        <input type="hidden" asp-for="EmployeeId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-controller="Organizations" asp-action="Details" asp-route-Name="@ViewData["CompanyName"]">Back to List</a>
    </form>
</div>
