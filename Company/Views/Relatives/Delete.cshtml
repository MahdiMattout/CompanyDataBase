@model Relative

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this Relative?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
            <br />
            @Html.DisplayNameFor(model => model.Relationship)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
            <br />
            @Html.DisplayFor(model => model.Relationship)
    </dl>

    <br/>
    <br/>
    <form asp-action="Delete" asp-route-EmployeeId="@Model.EmployeeId" asp-route-RelativeName="@Model.Name">
        <input type="hidden" asp-for="Name" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-controller="Employees" asp-action="Details" asp-route-EmployeeId="@Model.EmployeeId">Back to Employee Details</a>
    </form>
</div>