@model Relative
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Relative</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Relatives" asp-action="Create" asp-route-EmployeeId="@ViewData["EmployeeId"]">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input required asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Relationship" class="control-label"></label>
                <input required asp-for="Relationship" class="form-control" />
                <span asp-validation-for="Relationship" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Employees" asp-action="Details" asp-route-EmployeeId="@ViewData["EmployeeId"]">Back to List</a>
</div>
