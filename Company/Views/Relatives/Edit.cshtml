@model Relative
@{
}



<div class="container">

    <h3>Edit Relative</h3>
    <hr />
    <form class="form-horizontal" asp-action="Edit" asp-route-EmployeeId="@Model.EmployeeId" asp-route-RelativeName="@Model.Name">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @*<input type="hidden" asp-for="Name" />*@
        <div class="form-group">
            <label asp-for="Name" class="control-label col-sm-2"></label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Relationship" class="control-label col-sm-2"></label>
            <div class="col-sm-10">
                <input asp-for="Relationship" class="form-control" />
                <span asp-validation-for="Relationship" class="text-danger"></span>
            </div>
        </div>

        <br />
        <br />
        <br />
        <hr />
        <a asp-controller="Employees" asp-action="Details" asp-route-EmployeeId="@Model.EmployeeId">Back to Employee Details</a>

        <div class="form-group float-right">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>

</div>
