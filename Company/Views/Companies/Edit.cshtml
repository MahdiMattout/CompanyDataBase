@model Company
@{
}


<div class="container">
    <h1>Edit the Company's Information</h1>
    <hr />

    <form asp-action="Edit" class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" asp-for="Name" />

        <div class="form-group">
            <label asp-for="Country" class="control-label col-sm-2"></label>
            <div class="col-sm-10">
                <input asp-for="Country" type="text" class="form-control" placeholder="Enter Country" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="City" class="control-label col-sm-2"></label>
            <div class="col-sm-10">
                <input asp-for="City" type="text" class="form-control" placeholder="city" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group">
            <label asp-for="Zip" class="control-label col-sm-2"></label>
            <div class="col-sm-10">
                <input asp-for="Zip" class="form-control" placeholder="enter zip code" />
                <span asp-validation-for="Zip" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group">
            <label asp-for="PhoneNumber" class="control-label col-sm-2"></label>
            <div class="col-sm-10">
                <input asp-for="PhoneNumber" class="form-control" placeholder="enter phone number" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="ContactEmail" class="control-label col-sm-2"></label>
            <div class="col-sm-10">
                <input asp-for="ContactEmail" type="email" class="form-control" placeholder="enter contact email" />
                <span asp-validation-for="ContactEmail" class="text-danger"></span>
            </div>
        </div>
        <br />

        <div class="modal-footer form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-action="Index">Back to all Companies</a>
        </div>

    </form>

</div>

