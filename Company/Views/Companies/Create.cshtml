@model Company

@{
    ViewData["Title"] = "Create";
}


<div class="container">
    <h3>Create Company</h3>
    <h4>Enter the company's details below</h4>
    <hr />

    <form asp-action="Create" class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Name" class="control-label col-sm-2"></label>
            <div class="col-sm-10">
                <input asp-for="Name" type="text" class="form-control" placeholder="Enter company name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Country" class="control-label col-sm-2"></label>
            <div class="col-sm-10">
                <input asp-for="Country" type="text" class="form-control" placeholder="country" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="City" class="control-label col-sm-2"></label>
            <div class="col-sm-10">
                <input asp-for="City" type="text" class="form-control" placeholder="city" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Zip" class="control-label col-sm-2"></label>
            <div class="col-sm-10">
                <input asp-for="Zip" class="form-control" placeholder="enter zip code" />
                <span asp-validation-for="Zip" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="PhoneNumber" class="control-label col-sm-2"></label>
            <div class="col-sm-10">
                <input asp-for="PhoneNumber" class="form-control" placeholder="enter phone number" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="ContactEmail" class="control-label col-sm-2"></label>
            <div class="col-sm-10">
                <input asp-for="ContactEmail" type="email" class="form-control" placeholder="enter contact email" />
                <span asp-validation-for="ContactEmail" class="text-danger"></span>
            </div>
        </div>
        <br />

        <div class="modal-footer">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-action="Index">Back to List</a>
        </div>
    </form>

</div>